<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.village.wannajoin">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".WannaJoinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/wannajoinlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="Enter_your_api_key" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.NewEventActivity"
            android:label="@string/title_activity_new_event"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.village.wannajoin.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NewGroupActivity"
            android:label="@string/title_activity_new_group"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.village.wannajoin.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ShareEventActivity"
            android:label="@string/title_activity_share_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.EventDetailActivity"
            android:label="@string/title_activity_event_detail"
            android:theme="@style/ActivityFade">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.village.wannajoin.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.GroupDetailActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/ActivityFade" />

        <receiver android:name=".widget.EventsWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.village.wannajoin.ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <service
            android:name=".widget.WidgetRemoteViewsService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service android:name=".messaging.WannaJoinFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".messaging.WannaJoinFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.FavoriteLocationsActivity"
            android:label="@string/title_activity_favorite_locations"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.village.wannajoin.ui.MainActivity" />
        </activity>

        <provider
            android:name=".FavoriteEventLocationData.EventLocationProvider"
            android:authorities="com.village.wannajoin"
            android:exported="false" />

        <activity
            android:name=".ui.EditEventActivity"
            android:label="@string/title_activity_edit_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.EditGroupActivity"
            android:label="@string/title_activity_edit_group"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>